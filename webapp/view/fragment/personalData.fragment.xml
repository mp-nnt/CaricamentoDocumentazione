<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<f:Form editable="true" id="personalDataForm" width="100%">
		<f:layout>
			<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
				emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
		</f:layout>
		<f:formContainers>
			<f:FormContainer title="{i18n>requester}" id="requester">
				<f:formElements>
					<f:FormElement label="{i18n>surname}" id="surname_lbl">
						<f:fields>
							<Input width="50%" id="surname_inp" value="{/surname}" editable="{path: '/surname_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>name}" id="name_lbl">
						<f:fields>
							<Input width="50%" id="name_inp" value="{/name}" editable="{path: '/surname_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>owner}" id="owner_lbl">
						<f:fields>
							<Input width="50%" id="owner_inp" value="{/owner}" editable="{path: '/owner_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>piva}" id="piva_lbl">
						<f:fields>
							<Input width="50%" id="piva_inp" value="{/piva}" editable="{path: '/piva_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>fiscalCode}" id="fiscalCode_lbl">
						<f:fields>
							<Input width="50%" id="fiscalCode_inp" value="{/fiscalCode}" editable="{path: '/fiscalCode_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>sector}" id="sector_lbl">
						<f:fields>
							<RadioButtonGroup id="sector_grp" editable="{path: '/sector_vrf', formatter: '.formatter.editableFormatter'}">
								<buttons>
									<RadioButton text="{i18n>craft}" selected="{/craft}" groupName="gr_sector"/>
									<RadioButton text="{i18n>industry}" selected="{/industry}" groupName="gr_sector"/>
									<RadioButton text="{i18n>trade}" selected="{/trade}" groupName="gr_sector"/>
									<RadioButton text="{i18n>services}" selected="{/services}" groupName="gr_sector"/>
									<RadioButton text="{i18n>freelance}" selected="{/freelance}" groupName="gr_sector"/>
								</buttons>
							</RadioButtonGroup>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>state}" id="state_lbl">
						<f:fields>
							<Input width="50%" id="state_inp" value="{/state}" editable="{path: '/state_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>region}" id="region_lbl">
						<f:fields>
							<Input width="50%" id="region_inp" value="{/region}" editable="{path: '/postCode_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>postCode}" id="postCode_lbl">
						<f:fields>
							<Input width="50%" id="postCode_inp" value="{/postCode}" editable="{path: '/postCode_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>city}" id="city_lbl">
						<f:fields>
							<Input width="50%" id="city_inp" value="{/city}" editable="{path: '/city_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>district}" id="district_lbl">
						<f:fields>
							<Input width="50%" id="district_inp" value="{/district}" editable="{path: '/city_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>street}" id="street_lbl">
						<f:fields>
							<Input width="50%" id="street_inp" value="{/street}" editable="{path: '/street_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>streetNumber}" id="streetNumber_lbl">
						<f:fields>
							<Input width="50%" id="streetNumber_inp" value="{/streetNumber}" editable="{path: '/street_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>telephone}" id="telephone_lbl">
						<f:fields>
							<Input width="50%" id="telephone_inp" value="{/telephone}" type="Tel"
								editable="{path: '/telephone_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>mail}" id="mail_lbl">
						<f:fields>
							<Input width="50%" id="mail_inp" value="{/mail}" type="Email" editable="{path: '/mail_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>pec}" id="pec_lbl">
						<f:fields>
							<Input width="50%" id="pec_inp" value="{/pec}" type="Email" editable="{path: '/pec_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>iban}" id="iban_lbl">
						<f:fields>
							<Input width="50%" id="iban_inp" value="{/iban}" editable="{path: '/iban_vrf', formatter: '.formatter.editableFormatter'}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>language}" id="language_lbl">
						<f:fields>
							<RadioButtonGroup id="language_grp" columns="2" editable="{path: '/language_vrf', formatter: '.formatter.editableFormatter'}">
								<buttons>
									<RadioButton text="{i18n>italian}" selected="{/italian}" groupName="gr_language"/>
									<RadioButton text="{i18n>german}" selected="{/german}" groupName="gr_language"/>
								</buttons>
							</RadioButtonGroup>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>note}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<Text text="{/notePers}" width="100%"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>