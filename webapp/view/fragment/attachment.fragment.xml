<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table"
	xmlns:u="sap.ui.unified" xmlns:mvc="sap.ui.core.mvc">
	<f:Form editable="true" id="attachmentForm" width="100%">
		<f:layout>
			<f:ResponsiveGridLayout singleContainerFullSize="true"/>
		</f:layout>
		<f:formContainers>
			<f:FormContainer title="{i18n>UplAttach}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<t:Table selectionMode="None" rows="{uploadedDocument>/items}">
								<t:columns>
									<t:Column>
										<Label text="{i18n>Type}" textAlign="Center"/>
										<t:template>
											<Text text="{uploadedDocument>Type}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>Name}" textAlign="Center"/>
										<t:template>
											<Text text="{uploadedDocument>fileName}"/>
										</t:template>
									</t:Column>
									<t:Column>
										<Label text="{i18n>date}" textAlign="Center"/>
										<t:template>
											<Text text="{uploadedDocument>fileUploadDate}"/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>